{
    "manifest_version": 3,
    "name": "Chatbot Save File",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "https://*.openai.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "host_permissions": [
      "https://*.openai.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["icon16.png"],
        "matches": ["https://*.openai.com/*"]
      }
    ]
  }
  